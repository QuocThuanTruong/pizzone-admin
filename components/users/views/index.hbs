<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Manage users</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Admin</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0);">Manage users</a></li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div>
            <!-- end page-title -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <div class="row p-3">
                                <div class="col-lg-3">
                                    <form role="search" class="email-inbox" method="GET" action="/manage-users">
                                        <div class="form-group mb-0">
                                            <input type="text" class="form-control rounded" placeholder="Search users.." name="key_name">
                                            <button type="submit"><i class="fa fa-search"></i></button>
                                        </div>
                                    </form>

                                </div>

                                <div class="col-lg-7">
                                    <!-- filter here -->
                                    <div class="row ">
                                        <p class="col-sm-3 found-search-item col-form-label ">Found
                                            <span id="total-result">
                                                <strong>{{totalResult}}</strong> items
                                            </span>
                                            <script type="text/x-handlebars-template" id="total-result-template">
                                                <strong>\{{totalResult}}</strong> items
                                            </script>
                                        </p>

                                        <p class="found-search-item col-form-label">Categories</p>
                                        <div class="col-sm-auto">
                                            <select class="form-control" id="category" onchange="changeCategory()">
                                                {{#if isAll}}
                                                    <option selected>All</option>
                                                {{else}}
                                                    <option>All</option>
                                                {{/if}}
                                                {{#if isLocked}}
                                                    <option selected>Locked</option>
                                                {{else}}
                                                    <option>Locked</option>
                                                {{/if}}
                                                {{#if isUnlocked}}
                                                    <option selected>Unlocked</option>
                                                {{else}}
                                                    <option>Unlocked</option>
                                                {{/if}}
                                            </select>
                                        </div>

                                        <p class="found-search-item col-form-label" >Sort by</p>
                                        <div class="col-sm-auto">
                                            <select class="form-control" id="sort-by" onchange="gotoPage({{category}}, 1)">
                                                <option>Date</option>
                                                <option>Name</option>
                                                <option>Role</option>
                                            </select>
                                        </div>

                                        <p class="found-search-item col-form-label">Shown items</p>
                                        <div class="col-sm-auto">
                                            <select class="form-control" id="total_dish_per_page" onchange="gotoPage({{category}}, 1)">
                                                {{#if totalDishPerPageOption1Selected}}
                                                    <option selected>1</option>
                                                {{else}}
                                                    <option>1</option>
                                                {{/if}}
                                                {{#if totalDishPerPageOption2Selected}}
                                                    <option selected>2</option>
                                                {{else}}
                                                    <option>2</option>
                                                {{/if}}
                                                {{#if totalDishPerPageOption3Selected}}
                                                    <option selected>3</option>
                                                {{else}}
                                                    <option>3</option>
                                                {{/if}}
                                            </select>
                                        </div>

                                    </div>
                                </div>

                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped mb-0">
                                    <thead>
                                    <tr class="bg-primary">
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <th scope="row">1</th>
                                            <td>jadsklfjaskdlfjklasdjflksadjfkl</td>
                                            <td>abc@gmail.com</td>
                                            <td>012345567</td>
                                            <!-- binding bage info -->
                                            <td><span class="badge badge-danger">Khóa</span></td>
                                            <td>
                                                <div class="btn-toolbar form-group mb-0">
                                                    <div class="">
                                                        <a href="/manage-users/detail/1" role="button" class="btn btn-success waves-effect waves-light m-r-5"><i class="far fa-eye"></i></a>
                                                        <button type="button" class="btn btn-danger waves-effect waves-light m-r-5 delete-modal-dialog" data-toggle="modal" data-target="#alertDeleteModal" onclick="getID('{{dish_id}}')">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>

                                {{> deleteWarningModal}}
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>

            <div id="pagination">
                {{{render_pagination category page totalPage}}}
            </div>
            <script type="text/x-handlebars-template" id="pagination-template">
                \{{{render_pagination category page totalPage}}}
            </script>
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->

    <footer class="footer">
        © 2020 Pizzone <span class="d-none d-sm-inline-block"> - Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign</span>.
    </footer>
</div>
